<%= form_for(asset) do |f| %>
  <%= f.simple_text_field :name %>
  <%= f.simple_text_field :symbol %>
  <%= f.simple_collection_select :category, Asset::CATEGORY, :itself, :humanize %>
  <%= f.simple_collection_select :exchange, Asset::EXCHANGE, :itself, :upcase %>
  <%= f.simple_text_field :expense_ratio %>

  <%= f.submit %>
<% end %>
