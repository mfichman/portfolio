<div class='panel panel-default'>
  <div class='panel-heading'>
    <h1 class='panel-title'>New <%= @record.model_name.singular.titlecase %> </h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to 'Home', '/' %></li>
    <li><%= link_to record_class.model_name.plural.humanize.titlecase, url_for(record_class) %></li>
    <li class='active'>New</li>
  </ol>

  <div class='panel-body'>
    <div class='row'>
      <div class='col-sm-9'>
        <%= render 'form', @record.model_name.singular.to_sym => @record %>
      </div>
    </div>
  </div>

  <div class='panel-footer'/>
</div>
